@using NordFish.Database.Entities
@using NordFish.Web.Models.Product
@model ShowViewModel

<section class="contact-img-area"></section>
<section class="pages products-page section-padding-top">
	<div class="container">
		<div class="row">
            <div class="col-md-1 col-lg-1"></div>
            <div class="col-md-10 col-lg-10">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="features-tab">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="profile">
                                    <div class="row">
                                        @if(Model.Products.Count == 0)
                                        {
                                            <h3>No one product</h3>
                                        }
                                        else
                                        {
                                            @foreach(ProductEntity product in Model.Products)
                                            {
                                                <partial name="_ProductItemPartial" model="product" />
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
</section>
<section class="section-padding-top"></section>